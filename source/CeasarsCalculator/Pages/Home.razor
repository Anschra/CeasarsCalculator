@page "/"


<PageTitle>Cäsars Taschenrechner</PageTitle>



<FluentCard Class="calc-wrapper">
    <FluentCard Class="calc-output">@_output</FluentCard> 
    <FluentCard Class="calc-keypad">
        <FluentButton Appearance="Appearance.Lightweight" Class="calc-numberkey" Style="grid-area: 1 / 1 / 1 / 2;" OnClick="() => OnClickNumber_I()">I</FluentButton>
        <FluentButton Appearance="Appearance.Lightweight" Class="calc-numberkey" Style="grid-area: 1 / 2 / 1 / 3;" OnClick="() => OnClickNumber_V()">V</FluentButton>
        <FluentButton Appearance="Appearance.Lightweight" Class="calc-numberkey" Style="grid-area: 1 / 3 / 1 / 4;" OnClick="() => OnClickNumber_X()">X</FluentButton>
        <FluentButton BackgroundColor="red" Color="white" Class="calc-optionkey" Style="grid-area: 1 / 5 / 1 / 6;" OnClick="() => OnClickEqualSign()">=</FluentButton>
        <FluentButton BackgroundColor="red" Color="white" Class="calc-optionkey" Style="grid-area: 1 / 6 / 1 / 7;" OnClick="() => OnClickAC()">AC</FluentButton>

        <FluentButton Appearance="Appearance.Lightweight" Class="calc-numberkey" Style="grid-area: 2 / 1 / 2 / 2;" OnClick="() => OnClickNumber_L()">L</FluentButton>
        <FluentButton Appearance="Appearance.Lightweight" Class="calc-numberkey" Style="grid-area: 2 / 2 / 2 / 3;" OnClick="() => OnClickNumber_C()">C</FluentButton>
        <FluentButton Appearance="Appearance.Lightweight" Class="calc-numberkey" Style="grid-area: 2 / 3 / 2 / 4;" OnClick="() => OnClickNumber_D()">D</FluentButton>
        <FluentButton Appearance="Appearance.Accent" Class="calc-functionkey" Style="grid-area: 2 / 5 / 2 / 6;" OnClick="() => OnClickPlusSign()">+</FluentButton>
        <FluentButton Appearance="Appearance.Accent" Class="calc-functionkey" Style="grid-area: 2 / 6 / 2 / 7;"OnClick="() => OnClickMinusSign()">-</FluentButton>

        <FluentButton Appearance="Appearance.Lightweight" Class="calc-numberkey" Style="grid-area: 3 / 2 / 3 / 3;" OnClick="() => OnClickNumber_M()">M</FluentButton>
        <FluentButton Appearance="Appearance.Accent" Class="calc-functionkey" Style="grid-area: 3 / 5 / 3 / 6;" OnClick="() => OnClickMultiplySign()">*</FluentButton>
        <FluentButton Appearance="Appearance.Accent" Class="calc-functionkey" Style="grid-area: 3 / 6 / 3 / 7;" OnClick="() => OnClickDivideSign()">/</FluentButton>
    </FluentCard>
</FluentCard>

